<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <Border x:Key="DeleteWorkerDialog" Background="White" CornerRadius="4" Padding="30" MinWidth="400">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="AlertCircle" Width="32" Height="32" Foreground="#F44336" VerticalAlignment="Center" Margin="0,0,15,0" />
                <TextBlock Text="Mitarbeiter löschen" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#212121" />
            </StackPanel>

            <TextBlock TextWrapping="Wrap" Margin="0,0,0,25" FontSize="14" Foreground="#424242">
                <Run Text="Möchten Sie den Mitarbeiter " />
                <Run Text="{Binding SelectedWorker.Name, Mode=OneWay}" FontWeight="SemiBold" />
                <Run Text=" wirklich löschen? Diese Aktion kann nicht rückgängig gemacht werden." />
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Abbrechen" Width="100" Height="36" Margin="0,0,10,0"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                    <Button.CommandParameter><system:Boolean>False</system:Boolean></Button.CommandParameter>
                </Button>

                <Button Content="Löschen" Width="100" Height="36"
                        Background="#F44336" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                    <Button.CommandParameter><system:Boolean>True</system:Boolean></Button.CommandParameter>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/> 
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E53935" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</ResourceDictionary>