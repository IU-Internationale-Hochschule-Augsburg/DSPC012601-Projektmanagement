<UserControl x:Class="Projektmanagement_DesktopApp.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektmanagement_DesktopApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" MinWidth="300"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding HeaderText}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#1976D2"/>
                    <Button Grid.Column="1" Command="{Binding AddCommand}" Width="36" Height="36" Background="#1976D2" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="18">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Path Data="M 0,6 L 12,6 M 6,0 L 6,12" Stroke="White" StrokeThickness="3" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>
                </Grid>

                <!-- Aufgabenliste -->
                <ScrollViewer Grid.Row="1" Visibility="{Binding IsListVisible, Converter={StaticResource BoolToVisibility}}">
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,12" Background="Transparent" Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#757575" TextTrimming="CharacterEllipsis" MaxWidth="280"
                                                   Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Description}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StartDate, StringFormat='Start: {0:dd.MM.yyyy}'}" FontSize="12" Foreground="#757575"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Neues Aufgabe Eingabeformular -->
                <StackPanel Grid.Row="1" Visibility="{Binding IsAddingNew, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Beschreibung" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8" FontSize="14" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" BorderBrush="#BDBDBD" BorderThickness="1"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Dauer (Stunden) *" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewDuration, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="14"
                             BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" Visibility="{Binding IsAddingNew, Converter={StaticResource BoolToVisibility}}">
                    <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100" Height="36" Margin="0,0,10,0"/>
                    <Button Content="Speichern" Command="{Binding SaveCommand}" Width="100" Height="36" Background="#1976D2" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Rechte Seite: Details -->
        <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="20" Background="White">
            <Grid>
                <!-- Detail-Ansicht bei ausgewÃ¤hlter Aufgabe -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTask}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Details" FontSize="24" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,20"/>

                    <!-- Detail-Grid -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Aufgabe:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTask.DisplayName}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Beschreibung:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTask.Description}" FontSize="14" Foreground="#212121" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Start:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTask.StartDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Ende:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTask.EndDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Dauer:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedTask.Duration, StringFormat='{}{0} Stunden'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>
                    </Grid>

                    <!-- Timeline aktualisieren Button -->
                    <Button Content="ðŸ“… Timeline aktualisieren"
                            Command="{Binding RecalculateTimelineCommand}"
                            Height="40" Margin="0,25,0,0"
                            HorizontalAlignment="Stretch"
                            Background="#1976D2" Foreground="White" FontSize="14" FontWeight="Medium"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Platzhalter wenn keine Aufgabe ausgewÃ¤hlt -->
                <TextBlock Text="Keine Aufgabe ausgewÃ¤hlt" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#757575">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTask}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
