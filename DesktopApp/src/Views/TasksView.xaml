<UserControl x:Class="Projektmanagement_DesktopApp.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektmanagement_DesktopApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/src/Views/Ressources/TasksDialogs.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <materialDesign:DialogHost Identifier="TaskRootDialog">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" MinWidth="300"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding HeaderText}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#1976D2" TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Column="1" Command="{Binding AddCommand}" Width="36" Height="36" Background="#1976D2" BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="18">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Path Data="M 0,6 L 12,6 M 6,0 L 6,12" Stroke="White" StrokeThickness="3" Stretch="Uniform" Width="16" Height="16"/>
                        </Button>
                    </Grid>

                    <!-- Aufgabenliste -->
                    <ScrollViewer Grid.Row="1" Visibility="{Binding IsListVisible, Converter={StaticResource BoolToVisibility}}">
                        <ItemsControl ItemsSource="{Binding Tasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,12" Background="Transparent" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#757575" TextTrimming="CharacterEllipsis" MaxWidth="280"
                                                       Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Description}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding StartDate, StringFormat='Start: {0:dd.MM.yyyy}'}" FontSize="12" Foreground="#757575"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Neues Aufgabe Eingabeformular -->
                    <ScrollViewer Grid.Row="1" Visibility="{Binding IsAddingNew, Converter={StaticResource BoolToVisibility}}" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Beschreibung" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" FontSize="14" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" BorderBrush="#BDBDBD" BorderThickness="1"
                                 Margin="0,0,0,15"/>
    
                        <TextBlock Text="Dauer (Stunden) *" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewDuration, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="14"
                                 BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"/>
    
                        <TextBlock Text="Projekt" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Projects}" SelectedItem="{Binding NewProject}"
                                  DisplayMemberPath="Name" Padding="8" FontSize="14"
                                  BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15" Background="White"/>
    
                        <TextBlock Text="Bearbeiter" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Workers}" SelectedItem="{Binding NewWorker}"
                                  DisplayMemberPath="Name" Padding="8" FontSize="14"
                                  BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15" Background="White"/>
    
                        <TextBlock Text="VorgÃ¤nger-Aufgabe" FontSize="14" Foreground="#424242" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding PotentialPredecessors}" SelectedItem="{Binding NewPredecessor}"
                                  DisplayMemberPath="DisplayName" Padding="8" FontSize="14"
                                  BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,30" Background="White"/>
                    </StackPanel>
                </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" Visibility="{Binding IsAddingNew, Converter={StaticResource BoolToVisibility}}">
                        <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100" Height="36" Margin="0,0,10,0"/>
                        <Button Content="Speichern" Command="{Binding SaveCommand}" Width="100" Height="36" Background="#1976D2" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Rechte Seite: Details -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="20" Background="White">
                <Grid>
                    <!-- Detail-Ansicht bei ausgewÃ¤hlter Aufgabe -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTask}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Details" FontSize="24" FontWeight="SemiBold" Foreground="#1976D2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding EditCommand}" Width="40" Height="40" Padding="0"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Bearbeiten">
                                <Viewbox Width="20" Height="20">
                                    <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" 
                                          Fill="#1976D2" Stretch="Uniform"/>
                                </Viewbox>
                            </Button>
                            
                            <Button Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedTask}" 
                                    Width="40" Height="40" Margin="5,0,0,0" Padding="0"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="LÃ¶schen">
                                <Viewbox Width="20" Height="20">
                                    <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" 
                                          Fill="#D32F2F" Stretch="Uniform"/>
                                </Viewbox>
                            </Button>
                        </StackPanel>
                    </Grid>

                            <Button Grid.Column="1" 
                                    Width="40" Height="40" 
                                    Command="{Binding EditCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}" 
                                    ToolTip="Vorgang bearbeiten">
                                <materialDesign:PackIcon Kind="Pencil" />
                            </Button>

                            <Button Grid.Column="2" 
                                    Width="40" Height="40" 
                                    Style="{StaticResource MaterialDesignIconButton}" 
                                    ToolTip="Vorgang lÃ¶schen" 
                                    Click="DeleteButton_Click">
                                <materialDesign:PackIcon Kind="Delete"/>
                            </Button>
                        </Grid>
                        <!-- Detail-Grid -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Aufgabe:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTask.DisplayName}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Projekt:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTask.Project.Name}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Bearbeiter:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTask.Worker.Name}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Beschreibung:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTask.Description}" FontSize="14" Foreground="#212121" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Start:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedTask.StartDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Ende:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedTask.EndDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Dauer:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedTask.Duration, StringFormat='{}{0} Stunden'}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="VorgÃ¤nger-ID:" FontSize="14" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SelectedTask.PreviousTaskId}" FontSize="14" Foreground="#212121" Margin="0,0,0,10"/>
                        </Grid>

                        <!-- Timeline aktualisieren Button -->
                        <Button Content="ðŸ“… Timeline aktualisieren"
                                Command="{Binding RecalculateTimelineCommand}"
                                Height="40" Margin="0,25,0,0"
                                HorizontalAlignment="Stretch"
                                Background="#1976D2" Foreground="White" FontSize="14" FontWeight="Medium"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1565C0"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#E0E0E0"/>
                                            <Setter Property="Foreground" Value="#9E9E9E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Platzhalter wenn keine Aufgabe ausgewÃ¤hlt -->
                    <TextBlock Text="Keine Aufgabe ausgewÃ¤hlt" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#757575">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTask}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost> </UserControl>